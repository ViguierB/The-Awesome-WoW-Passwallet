{
  "name": "the-awesome-wow-passwallet",
  "version": "1.0.0-beta",
  "description": "A World of Warcraft Classic passwallet",
  "main": "dist/main.js",
  "homepage": "https://gitlab.holidev.net/ben/the-awesome-wow-passwallet",
  "repository": {
    "type": "git",
    "url": "https://gitlab.holidev.net/ben/the-awesome-wow-passwallet"
  },
  "keywords": [],
  "author": "Ben <ben@holidev.net>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build-native-dev": "run-script-os",
    "build-native": "run-script-os",
    "build-native-dev:win32": "bash -c 'rm -r ./build; electron-rebuild -b'",
    "build-native-dev:linux:darwin": "rm -r ./build; electron-rebuild --debug -f -w native_executor",
    "build-native:win32": "bash -c 'rm -r ./build; electron-rebuild'",
    "build-native:linux:darwin": "rm -r build; electron-rebuild -f -w native_executor",
    "build-all": "npm run build-native && npm run build",
    "build-all-dev": "npm run build-native-dev && npm run build",
    "build-front": "bash -c 'cd html; bash -c \"npm run build\"'",
    "start-dev": "run-script-os",
    "start-dev:linux:darwin": "env IS_DEV=true ./node_modules/electron/dist/electron --inspect=5858 --gdb ./dist/main.js",
    "start-dev:win32": "bash -c 'env IS_DEV=true ./node_modules/electron/dist/electron --inspect=5858 ./dist/main.js'",
    "start": "electron ./dist/main.js",
    "dist": "electron-builder build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.holidev.passwallet",
    "productName": "the awesome wow passwallet",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "linux": {
      "target": [
        "deb",
        "appimage"
      ]
    },
    "deb": {
      "depends": [
        "libxdo3"
      ]
    },
    "snap": {
      "description": "A World of Warcraft Classic passwallet",
      "buildPackages": [
        "libxdo3"
      ]
    },
    "files": [
      "resources",
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*.node"
        ]
      },
      {
        "from": "dist",
        "to": "dist"
      },
      {
        "from": "html/build",
        "to": "html/build",
        "filter": [
          "**/index.html"
        ]
      },
      {
        "from": "resources",
        "to": ".",
        "filter": [
          "icon.png"
        ]
      },
      {
        "from": ".",
        "to": ".",
        "filter": [
          "package.json"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^10.1.6",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.2",
    "node-addon-api": "2.0.2",
    "run-script-os": "^1.1.3",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "crypto": "^1.0.1",
    "keytar": "^7.2.0",
    "nan": "^2.14.2",
    "react-jss": "^10.5.0"
  }
}
